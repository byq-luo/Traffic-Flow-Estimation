#:import Factory kivy.factory.Factory

<HyperScreen>:
    BoxLayout:
        MapView:
            id: map
            padding:(2,2)
            zoom:10
            lat: 41.091602
            lon: 29.066435
        BoxLayout:
            size_hint_x: 0.3
            orientation: 'vertical'
            canvas:
                Color:
                    rgba:(1, 1, 1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                cols:1
                Spinner:
                    id:region
                    background_color: (0, 0, 0, 0.3)
                    color:(0, 0.1, 0.9, 0.9)
                    option_cls: Factory.get("MenuBackChanger")
                    text: "Bolge Seciniz"
                    values: ['Hisarustu','bogazici','kadikoy','bogazici','kadikoya','bogazicia','kadikoyb']
                    font_name : 'Georgia'
                    on_text:root.pin_map()
                    font_size:'20sp'
                Spinner:
                    id: sensor
                    color:(0, 0.1, 0.9, 0.9)
                    background_color: (0, 0, 0, 0.3)
                    option_cls: Factory.get("MenuBackChanger")
                    text: 'Sensor Seciniz'
                    font_name : 'Georgia'
                    font_size:'20sp'
                    
            GridLayout:
                cols: 2
                Label:
                    canvas:
                        Color :
                            rgba:(0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Egitim\nBaslangic'
                    font_name : 'Georgia'
                    font_size:'20sp'
                Label:
                    canvas:
                        Color :
                            rgba: (0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Egitim\nBitis'
                    font_name : 'Georgia'
                    font_size:'20sp'
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    size_hint_y:None
                    height:2
                DatePicker:
                    text:"01-01-2017"
                    id:train_start
                    background_color:(0, 0, 0, 0.3)
                    font_name : 'Georgia'

                    text_size:(10,10)
                    color:(0, 0.1, 0.9, 0.9)
                DatePicker:
                    text:"01-05-2017"
                    id:train_end
                    background_color: (0, 0, 0, 0.3)
                    font_name : 'Georgia'
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    canvas:
                        Color :
                            rgba:(0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Test \nBaslangic'
                    font_name : 'Georgia'
                    font_size:'20sp'
                Label:
                    canvas:
                        Color :
                            rgba:(0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Test \nBitis'
                    font_name : 'Georgia'
                    font_size:'20sp'
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    size_hint_y:None
                    height:2
                DatePicker:
                    text: "01-05-2017"
                    id:test_start
                    background_color: (0, 0, 0, 0.3)
                    color : (0,0,0,1)
                    font_name : 'Georgia'
                DatePicker:
                    text: "01-06-2017"
                    id:test_end
                	font_name : 'Georgia'
                	font_color:(0,0,1,1)
                    background_color: (0, 0, 0, 0.3)
                    color : (0,0,0,1)
            GridLayout:
                cols:1
                Label:
                    size_hint_y :None
                    height:1
                Button:
                    font_name : 'Georgia'
                    font_size:'20sp'
                    color:(0, 0.1, 0.9, 0.9)
                    background_color: (0, 0, 0, 0.3)
                    text: 'Hiper Parametre\nAyarla'
                    on_press: root.settings_button_click()
                Label:
                    size_hint_y :None
                    height:2
                Button:
                    color:(0, 0.1, 0.9, 0.9)
                    background_color: (0, 0, 0, 0.3)
                    text: 'Egitimi Baslat'
                    font_size:'20sp'
                    font_name : 'Georgia'
                    on_press: root.start_train_button()
                Label:
                    size_hint_y :None
                    height:1
        Label:
            canvas:
                Color :
                    rgba:(1, 1, 1, 1)
                Rectangle:
                    size:self.size
                    pos:self.pos
            size_hint_x :None
            width:1    


<MenuBackChanger@SpinnerOption>:
    canvas:
        Color :
            rgba:(0, 0, 0, 0)
        Rectangle:
            size:self.size
            pos:self.pos
    color:(0, 0, 1, 1)
    font_size:'17sp'
<Options>:


<SettingsPopUp>:
    id: settings
    auto_dismiss: False
    size: (400,400)
    size_hint:(None,None)
    title: "Model Hiperparametre Secimi" 
    GridLayout:
        cols:2
        Label:
        Label:
        Label:
            text:'Epok sayisi giriniz:'
        TextInput:
            id:epoch
            text: '3'
            input_filter: 'int'
        Label:
            text: "Zaman araligi giriniz:"
        TextInput:
            id: time_step
            text: '30'
            input_filter: 'int'
        Label:
            text: 'Batch boyutunu giriniz:'
        TextInput:
            id:batch
            text:'2048'
            input_filter: 'int'
        Label:
            text:'Gun bilgisi eklensin mi?'
        Spinner:
            id: day
            text: "Evet"
            values: ["Evet","Hayir"]
        Label:
            text: 'Gun saat dilimi eklensin mi'
        Spinner:
            id:daypart
            text:'Evet'
            values: ["Evet","Hayir"]
        Label:
            text: "Eski haftalar"
        Spinner:
            id: prev_week
            text: "Yalnizca 1 hafta"
            values: ["Sadece 1 hafta", "1 ve 2 hafta", "1, 2 ve 3 hafta"]
        Label:
        Label:
        Label:
        Button:
            text: "Kapat"
            on_press: root.dismiss()


<TrainScreen>:
    canvas:
        Color :
            rgba:(0, 0, 0, 1)
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        BoxLayout:
            Image:
                allow_stretch:True
                id:graph
                source:"epoch_his/default.png"
        BoxLayout:
            size_hint_x : 0.45
            orientation:'vertical'
            BoxLayout:
                orientation:'vertical'
                Label:
                Label:
                Label:
                    color:(1,1,1,1)
                    id:header
                    font_size:'22sp'
                    text:"Ilk Epok Sonuclari\nBekleniyor"
                Label:
                    color:(1,1,1,1)
                    font_size:'20sp'
                    id:result
                Label:
                Label: 
                Label:
                Label: 
                Label:
                    color:(1,1,1,1)
                    font_size:'22sp'
                    text:'Progress Bar'
                ProgressBar:
                    text: "no title"
                    id: progress
                    max: 100
            BoxLayout:
                size_hint_y:0.1
                Button:
                    id:home
                    text:"Onceki\nSayfaya\nDon"
                    disabled: True
                    on_press:root.go_back_button()
                    fontsize:'12sp'
                Button:
                    id:results
                    text:"Tum\nSonuclari\nGor"
                    on_press:root.see_all_results_button_click()
                    fontsize:'12sp'
                    disabled: True

<ResultsScreen>:
    column_headings: column_headings
    orientation: "vertical"
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: header
            font_size:'40sp'
        GridLayout:
            canvas.before:
                Color:
                    rgba: (1, 0.2, 0, .5)     # 50% translucent orange red
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: column_headings
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 3

        BoxLayout:
            canvas.before:
                Color:
                    rgba: (.0, 0.9, .1, .3)
                Rectangle:
                    pos: self.pos
                    size: self.size

            RecycleView:
                viewclass: 'Button'
                background_color:(1,1,1,1)
                data: root.rv_data
                RecycleGridLayout:
                    cols: 3
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    multiselect: False
                    touch_multiselect: True
    BoxLayout:
        Button:
            size_hint_y:0.07
            text:"Bir Onceki Sayfaya Don"
            on_press: root.go_back_button()

        Button:
            size_hint_y:0.07
            text:"Ama Menuye Don"
            on_press: root.go_home_button()                        


<HomeScreen>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:'fsm.png'
    RelativeLayout:
        Button:          
            background_color:(0,1,1,0.4)
            font_size:'21sp'
            right: self.parent.right
            size_hint: None, None
            text: "Basla"
            on_press: root.go_to_hyper_screen()


<MyMarker>:

    on_press: self.update_sensor_spinner_text()