                    background_color:(0, 0, 0, 0.3)
                    font_name : 'Georgia'
                    text_size:(10,10)
                    color:(0, 0.1, 0.9, 0.9)
                DatePicker:
                    text:"01-05-2017"
                    id:train_end
                    background_color: (0, 0, 0, 0.3)
                    font_name : 'Georgia'
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    canvas:
                        Color :
                            rgba:(0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Test \nBaslangic'
                    font_name : 'Georgia'
                Label:
