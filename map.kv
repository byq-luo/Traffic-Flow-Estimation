                    text: 'Sensor Seciniz'
                    values: ['bogazici']
                    font_name : 'Georgia'
            GridLayout:
                cols: 2
                Label:
                    canvas:
                        Color :
                            rgba:(0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Egitim\nBaslangic'
                    font_name : 'Georgia'
                Label:
                    canvas:
                        Color :
                            rgba: (0, 0, 0, 0.3)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    color : (0, 0.1, 0.9, 0.9)
                    text: 'Egitim\nBitis'
                    font_name : 'Georgia'
                Label:
                    size_hint_y:None
                    height:2
                Label:
                    size_hint_y:None
                    height:2
